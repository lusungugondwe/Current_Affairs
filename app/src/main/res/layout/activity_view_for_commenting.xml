<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ViewForCommenting">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_news"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                app:shapeAppearanceOverlay="@style/cust"
                android:layout_width="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/download_3"
                android:layout_height="70dp"/>

            <TextView
                android:textStyle="bold"
                android:id="@+id/news_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/image_news"
                android:text="Data here..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textStyle="normal"
                android:alpha="0.7"
                android:id="@+id/news_author"
                android:layout_below="@+id/news_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/image_news"
                android:text="Lusungu Gondwe - Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textStyle="normal"
                android:alpha="0.7"
                android:id="@+id/news_date"
                android:layout_below="@+id/news_author"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/image_news"
                android:text="Date posted..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/top_2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/top_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:id="@+id/change_height"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:padding="10dp"
                android:id="@+id/full_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/top_comments"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_below="@+id/top_2"
        android:layout_width="match_parent"
        android:layout_height="330dp">
        <View
            android:id="@+id/line33"
            android:background="@color/teal_700"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/show_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_comments"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:weightSum="100"
        >

        <EditText
            android:id="@+id/news_comments_id"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="top"
            android:lines="3"
            android:hint="Add your comment" />

        <ImageView
            android:id="@+id/send_comment"
            android:clickable="true"
            android:layout_weight="90"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_send_24"
            />
    </LinearLayout>
</RelativeLayout>