<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_news"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                app:shapeAppearanceOverlay="@style/cust"
                android:layout_width="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/download_3"
                android:layout_height="50dp"/>

            <TextView
                android:textStyle="bold"
                android:id="@+id/comment_user"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/image_news"
                android:text="Username"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textStyle="normal"
                android:alpha="0.7"
                android:id="@+id/comment_id"
                android:layout_below="@+id/comment_user"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/image_news"
                android:text="Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"

                />

            <TextView
                android:textSize="10sp"
                android:textStyle="normal"
                android:alpha="0.7"
                android:id="@+id/date_commented"
                android:layout_below="@+id/comment_id"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/image_news"
                android:text="Date posted..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>